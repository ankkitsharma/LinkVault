# Kubernetes Environment Variables
# These values are used to generate ConfigMap and Secret
# Copy this file to .env and update with your values

# PostgreSQL Database Configuration
POSTGRES_DB=bookmarkdb
POSTGRES_USER=bookmarkuser
POSTGRES_PASSWORD=bookmarkpass

# Backend Configuration
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/bookmarkdb

# Frontend Configuration
VITE_API_URL=http://bookmarks.local/api

# Ingress Configuration
INGRESS_HOST=bookmarks.local

# Deployment Configuration
BACKEND_REPLICAS=2
FRONTEND_REPLICAS=2
